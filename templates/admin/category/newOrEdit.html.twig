{% extends 'base.html.twig' %}

{% block title %}
    {{ category is defined ? 'Edit Category' : 'Create Category' }}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title mb-4">{{ category is defined ? 'Edit' : 'Create' }} Category</h1>

            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <button class="btn btn-primary">
                {{ category is defined ? 'Update' : 'Create' }}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
