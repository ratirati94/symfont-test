{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <a href="{{ path('admin_category_new') }}" class="btn btn-success mb-3">â• New Category</a>

    <ul class="list-group">
        {% for category in categories %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    {{ category.title }}
                </div>

                <div>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-primary me-2">âœ Edit</a>

                    <form method="post"
                          action="{{ path('admin_category_delete', { id: category.id }) }}"
                          style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn btn-sm btn-outline-danger">ğŸ—‘ Delete</button>
                    </form>
                </div>
            </li>
        {% else %}
            <li class="list-group-item text-muted">No categories found.</li>
        {% endfor %}
    </ul>
{% endblock %}
